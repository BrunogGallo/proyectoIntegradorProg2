<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!--Con partials, reutilizo el head asi que por eso pongo lo de la linea 5, edito mas rapido-->

<%- include('./partials/head')  %> 

<body>
	<!-- Header -->
	<%- include('./partials/headerLogeado') %> 
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="https://via.placeholder.com/150" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= user.nombreUsuario %> 
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li> <%= productos.length %> Productos</li>
						<li>200 seguidores</li>
						<li><%= comentarios.length %>  comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < productos.length; i++ ) { %>

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products">
							<figure class="product-box_image">
								<img src= <%= productos[i].imagen %>  alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2> <%= productos[i].nombreProducto %> </h2>
								<p> <%= productos[i].descripcion %> </p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>

			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>