<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head')  %> 

<body>
	<!-- Header -->
	<%- include('./partials/header') %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<% if (productos.length == 0) { %>
				<div class="col-12">
					<h2 class="products-title">No se encontraron resultados para tu busqueda</h2>
				</div>
			<% } else { %>
				<div class="col-12">
					<h2 class="products-title">Se encontraron los siguientes resultados para tu busqueda</h2>
				</div>

				<% for( let i = 0; i < 6; i++ ) { %>

					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products">
								<figure class="product-box_image">
									<img src= <%= productos[i].imagen %>  alt="cafetera moulinex">
								</figure>
								<article class="product-box_data">
									<h2> <%= productos[i].nombreProducto %> </h2>
									<p> <%= productos[i].descripcion %> </p>
									<p>Comentarios: <% comentarios.length %> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %> 	
			<% } %> 
		</div>
	</div>
	<!-- footer -->
<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>